<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <parent>
    <artifactId>parent</artifactId>
    <groupId>com.bedatadriven.renjin</groupId>
    <version>0.1.0-SNAPSHOT</version>
    <relativePath>../../pom.xml</relativePath> 
  </parent>
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.bedatadriven.renjin</groupId>
  <artifactId>renjin-appengine-sample</artifactId>
  <name>AppEngine REPL</name>
  <packaging>war</packaging>

  <properties>
    <gae.version>1.4.3</gae.version>
    <gwt.version>2.2.0</gwt.version>
    <gae.port>8888</gae.port>
    <gae.sdk.root>${settings.localRepository}/com/google/appengine/appengine-java-sdk/${gae.version}/appengine-java-sdk-${gae.version}</gae.sdk.root>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.apache.geronimo.specs</groupId>
      <artifactId>geronimo-servlet_2.5_spec</artifactId>
      <version>1.2</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.google.appengine</groupId>
      <artifactId>appengine-api-1.0-sdk</artifactId>
      <version>${gae.version}</version>
    </dependency>
    <dependency>
      <groupId>com.google.gwt</groupId>
      <artifactId>gwt-servlet</artifactId>
      <version>${gwt.version}</version>
    </dependency>    <relativePath>../pom.xml</relativePath> 
    <dependency>
      <groupId>com.google.gwt</groupId>
      <artifactId>gwt-user</artifactId>
      <version>${gwt.version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.bedatadriven.renjin</groupId>
      <artifactId>renjin-core</artifactId>
      <version>${version}</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>net.kindleit</groupId>
        <artifactId>maven-gae-plugin</artifactId>
        <version>0.7.2</version>
        <configuration>
          <port>${gae.port}</port>
          <unpackVersion>${gae.version}</unpackVersion>
          <jvmFlags>
            <jvmFlag>-Xmx256m</jvmFlag>
          </jvmFlags>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>gwt-maven-plugin</artifactId>
        <version>2.2.0</version>
        <configuration>
          <port>${gae.port}</port>
          <runTarget>LotREPLs.html</runTarget>
        </configuration>
        <executions>
          <execution>
            <goals>
              <goal>compile</goal>
            </goals>
            <phase>prepare-package</phase>
            <configuration>
              <module>com.bedatadriven.renjin.appengine.LotREPLs</module>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>
